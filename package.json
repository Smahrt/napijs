{
  "name": "napijs",
  "version": "0.0.1",
  "description": "REST API for Napijs",
  "repository": "https://github.com/Strawberry/napijs",
  "main": "dist/src/app/app.js",
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "stop": "pm2 delete napijs",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules ./src/app/app.ts",
    "prod": "build && node ./dist/src/app/app.js",
    "test": "cross-env NODE_ENV=test PORT=4567 nyc --reporter=lcov mocha -r ts-node/register tests/**/*.spec.ts --delay --exit --timeout 20000",
    "coverage": "coveralls < coverage/lcov.info",
    "build": "tsc && yarn copy-templates",
    "copy-templates": "copyfiles ./src/lib/email-templates/*.ejs ./dist/lib/email-templates -f"
  },
  "author": "Kubiat Morgan for Napijs",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.5",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-things": "0.0.34",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^2.6.3",
    "@types/express": "^4.17.11",
    "@types/express-rate-limit": "^3.3.0",
    "@types/express-serve-static-core": "^4.17.21",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.149",
    "@types/luxon": "^1.26.2",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "3.3.1",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^3.0.0",
    "@types/node": "^20.2.5",
    "@types/nodemailer": "^4.6.6",
    "@types/pluralize": "0.0.29",
    "@types/qs": "^6.9.4",
    "@types/request": "^2.48.1",
    "@types/sinon": "^10.0.15",
    "@types/uuid": "^3.4.4",
    "bson": "4.7.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "chai-things": "^0.2.0",
    "copyfiles": "^2.1.1",
    "coveralls": "^3.0.13",
    "cross-env": "^6.0.3",
    "debug": "^4.1.1",
    "mocha": "^6.2.2",
    "nock": "^12.0.3",
    "nyc": "^14.1.1",
    "sinon": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.20.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.370.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "express": "^4.17.1",
    "express-rate-limit": "3.4.0",
    "google-auth-library": "^7.11.0",
